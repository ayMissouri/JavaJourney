
public class App {
	public static void main(String [] args) {
		
		String name = "Greg";
		int age = 43;
		
		System.out.println("There once was a man named " + name + ",");
		System.out.println("he was " + age + " years old. He really liked");
		System.out.println("the name " + name + ", but he didn't like being " + age + ".");
		System.out.println("Most of his friends were also " + age + ", and one");
		System.out.println("of them was also named " + name + ".");
	}
}
